<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Connexion au Panel</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #36393f;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            color: white;
        }

        .login-card {
            background-color: #2f3136;
            padding: 32px;
            border-radius: 8px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

        .stat-icon-img {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            margin-bottom: 10px;
            background: #202225;
            object-fit: cover;
        }

        .server-info {
            margin-bottom: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .server-info span {
            color: #b9bbbe;
            font-size: 14px;
            text-transform: uppercase;
            font-weight: bold;
        }

        h1 {
            font-size: 24px;
            margin-bottom: 8px;
            color: #ffffff;
        }

        p {
            color: #b9bbbe;
            margin-bottom: 24px;
        }

        .form-group {
            text-align: left;
            margin-bottom: 20px;
        }

        label {
            display: block;
            text-transform: uppercase;
            font-size: 12px;
            font-weight: bold;
            color: #b9bbbe;
            margin-bottom: 8px;
        }

        input {
            width: 100%;
            padding: 10px;
            border-radius: 3px;
            border: 1px solid #202225;
            background-color: #202225;
            color: white;
            box-sizing: border-box;
            outline: none;
            transition: border 0.2s;
        }

        input:focus {
            border-color: #7289da;
        }

        button {
            width: 100%;
            padding: 12px;
            background-color: #5865f2;
            color: white;
            border: none;
            border-radius: 3px;
            font-size: 16px;
            font-weight: 500;
            cursor: pointer;
            transition: background-color 0.2s, transform 0.1s;
        }

        button:hover {
            background-color: #4752c4;
        }

        button:active {
            transform: scale(0.98);
        }

        .error-msg {
            background-color: #f04747;
            color: white;
            padding: 10px;
            border-radius: 3px;
            margin-bottom: 20px;
            font-size: 14px;
        }
    </style>
</head>
<body>

    <div class="login-card">
        <div class="server-info">
            <img id="stat-icon" class="stat-icon-img" src="" style="display: none;">
            <span id="stat-name">Chargement...</span>
        </div>

        <h1>Content de vous revoir !</h1>
        <p>Connectez-vous pour g√©rer votre bot.</p>

        <% if (error) { %>
            <div class="error-msg">
                <%= error %>
            </div>
        <% } %>

        <form action="/login" method="POST">
            <div class="form-group">
                <label>Nom d'utilisateur</label>
                <input type="text" name="username" required>
            </div>

            <div class="form-group">
                <label>Mot de passe</label>
                <input type="password" name="password" required>
            </div>

            <button type="submit">Connexion</button>
        </form>
    </div>

    <script>
        async function loadServerInfo() {
            try {
                const res = await fetch('/api/stats');
                const data = await res.json();
                
                document.getElementById('stat-name').innerText = data.serverName;
                
                const iconImg = document.getElementById('stat-icon');
                if(data.icon) {
                    iconImg.src = data.icon;
                    iconImg.style.display = 'block';
                }
            } catch (e) {
                document.getElementById('stat-name').innerText = "Dashboard";
            }
        }
        loadServerInfo();
    </script>
</body>
</html>